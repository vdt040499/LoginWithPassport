<% include ../partials/header %>

<div class="container" style="margin-top: 30px;
    background-color: rgb(236, 236, 236); padding: 20px 30px; border-radius: 20px;">
    <h6>Sign In</h6>
    <div class="row">
        <div class="col-md-6">
            <a href="/auth/fb" type="button" class="btn btn-lg btn-block text-white" style="background-color: #4267b2;">
                <span class="fa fa-facebook-f"></span>
                Sign in with Facebook</a>
        </div>
        <div class="col-md-6">
            <a href="/auth/gg" type="button" class="btn btn-lg btn-block text-white" style="background-color:#EA4335;">
                <span class="fa fa-google"></span>
                Sign in with Google</a>
        </div>
    </div>
    <h4>OR</h4>
    <form action="/users/login" class="needs-validation" method="POST">
        <div class="form-group row">
            <div class="col-md">
                <input type="text" name="username" class="form-control" id="username" placeholder="Username">
                <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                <button type="submit" style="margin-top: 10px; margin-bottom: 10px;"
                    class="btn btn-success btn-lg btn-block">
                    <span class="fa fa-sign-in">
                    </span>
                    Sign In</button>
            </div>
        </div>
        <a href="#">Forgot Password?</a>
        <hr>
        <a type="button" style="margin-top: 10px; margin-bottom: 10px;" class="btn btn-primary btn-lg btn-block" href="/users/signup">
            <span class="fa fa-user-plus">
            </span>
            Sign up New Account</a>
    </form>
</div>
<script src="/javascripts/login.js"></script>

<% include ../partials/footer %>